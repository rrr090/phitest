{
  "compilerOptions": {
    "skipLibCheck": true, // Это заставит TS игнорировать ошибки в папке node_modules
    "typeRoots": ["./node_modules/@types"], // Явно указываем, где искать типы
    "types": ["node"], // Ограничиваем автоматический поиск типов только необходимыми
    
    // Остальные твои настройки...
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}